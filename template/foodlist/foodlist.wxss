.shop-info{
    display: flex;
    padding: 20rpx;
    background: #fff;
    margin-top: 20rpx;
    margin-bottom: 20rpx;

}
 .shop-img image{
    width: 220rpx;
    height: 220rpx;
}
.shop-text{
    flex: 1;
    padding-left: 20rpx;
    position: relative;
}
.shop-text .name{
    color: hotpink;
    font-size: 36rpx;
    margin-bottom: 16rpx;
}
.other{
   display: flex;
   position: absolute;
   bottom: 10rpx;
}
.other .price{
    color: red;
    font-size: 30rpx;
    font-weight: bold;
    margin-right: 30rpx;
}
.other .num{
    color: #666;
    font-size: 28rpx;

}