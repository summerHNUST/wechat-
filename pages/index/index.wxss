/**index.wxss**/
/* 设置swiper组件的宽高 */
.banner{
  height: 338rpx;
  position: relative;
}
swiper{
  width: 100%;
  height: 338rpx;
}
/* 设置swiper组件里面图片的宽高 */
swiper image{
  width: 100%;
  height: 338rpx;
}
/* .banner .swiper-item{
  position: relative;
} */
.banner .des{
  position: absolute;
  background: rgba(0, 0,0, 0.5);
  color: #fff;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 10rpx;
  font-size: 24rpx;
  text-align: center;
}
.banner-current{
  position: absolute;
  right: 20rpx;
  color: pink;
  bottom: 12rpx;
  font-size: 26rpx;
  font-weight: bold;
}
.one-day{
  display: flex;
  padding: 0 40rpx;
  margin: 34rpx 0;
  justify-content: space-between;
}
.one-item image{
  width: 306rpx;
  height: 185rpx;
}
.one-item{
  text-align: center;
  font-size: 28rpx;
  color: #4d4b4b;
}
.item{
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid hotpink;
  margin-bottom: 20rpx;
}
.title{
  font-size: 30rpx;
  color: blue;
  margin-bottom: 18rpx;
  position: relative;
}
.item-wrapper{
  display: flex;
}
.img image{
  width: 210rpx;
  height: 140rpx;
}
.info{
  color: green;
  font-size: 26rpx;
  padding-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  height: 100%;

}
.ready-num{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #666;
}
.ready-num text{
  color: red;
  margin-right: 6rpx;
}